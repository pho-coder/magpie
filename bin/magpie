#!/usr/bin/env bash
bin=`dirname $0`
bin=`cd "$bin"; pwd`
MAGPIE_PROJECT=$2
DEFAULT_CONF_DIR="$bin"/../conf
DEFAULT_HOME=`cd "$bin"/..;pwd`
MAGPIE_CONF_DIR=${MAGPIE_CONF_DIR:-$DEFAULT_CONF_DIR}
MAGPIE_HOME=${MAGPIE_HOME:-$DEFAULT_HOME}
MAGPIE_LOG_DIR=${MAGPIE_LOG_DIR:-$MAGPIE_HOME/logs}
MAGPIE_NATIVE_DIR=${MAGPIE_NATIVE_DIR:-$MAGPIE_HOME/lib/native/Linux-amd64-64}
PID_FILE="$MAGPIE_LOG_DIR/.${MAGPIE_PROJECT}.run.pid"
mkdir -p $MAGPIE_LOG_DIR
MAGPIE_HEAP_OPTS="-Xmx256M -Xms128M"

MAGPIE_JMX_ENABLE=true
MAGPIE_JMX_PORT=7373
MAGPIE_JMX_ACCESS_FILE=${MAGPIE_CONF_DIR}/magpie.jmx.access
MAGPIE_JMX_PASSWORD_FILE=${MAGPIE_CONF_DIR}/magpie.jmx.password
MAGPIE_JMX_PARAMETERS="-Dcom.sun.management.jmxremote=true -Dcom.sun.management.jmxremote.port=${MAGPIE_JMX_PORT} -Dcom.sun.management.jmxremote.authenticate=true -Dcom.sun.management.jmxremote.access.file=${MAGPIE_JMX_ACCESS_FILE} -Dcom.sun.management.jmxremote.password.file=${MAGPIE_JMX_PASSWORD_FILE} -Dcom.sun.management.jmxremote.ssl=false"

function running(){
	if [ -f "$PID_FILE" ]; then
		pid=$(cat "$PID_FILE")
		process=`ps aux | grep " $pid " | grep -v grep`;
		if [ "$process" == "" ]; then
	    		return 1;
		else
			return 0;
		fi
	else
		return 1
	fi	
}

function start_server() {
	if running; then
		echo "is running."
		exit 1
	fi
        readonly MASTER_JARS="$(ls "$MAGPIE_HOME"/magpie-*.jar "$MAGPIE_HOME"/target/magpie-*.jar 2> /dev/null | grep -v magpie-client | tr "\n" :)"
        if [ -n "${JAVA_HOME}" ]; then
    	  RUNNER="${JAVA_HOME}/bin/java"
	else
    	  if [ `command -v java` ]; then
            RUNNER="java"
    	  else
            echo "JAVA_HOME is not set" >&2
            exit 1
     	  fi
        fi
	CLASSPATH="$MAGPIE_CONF_DIR:$MASTER_JARS"
        if ${MAGPIE_JMX_ENABLE} == true ; then
	  nohup "$RUNNER" $MAGPIE_HEAP_OPTS -cp "$CLASSPATH" "${MAGPIE_JMX_PARAMETERS}" -Djava.library.path="$MAGPIE_NATIVE_DIR" -Dmagpie.configuration="$MAGPIE_CONF_DIR" -Dlog4j.configuration=magpie.log4j.properties -Dmagpie.home="$MAGPIE_HOME" -Dmagpie.project="$MAGPIE_PROJECT" com.jd.magpie.daemon.${MAGPIE_PROJECT} "$@" > "$MAGPIE_LOG_DIR"/"$MAGPIE_PROJECT".out 2>&1 < /dev/null &
        else
	  nohup "$RUNNER" $MAGPIE_HEAP_OPTS -cp "$CLASSPATH" -Djava.library.path="$MAGPIE_NATIVE_DIR" -Dmagpie.configuration="$MAGPIE_CONF_DIR" -Dlog4j.configuration=magpie.log4j.properties -Dmagpie.home="$MAGPIE_HOME" -Dmagpie.project="$MAGPIE_PROJECT" com.jd.magpie.daemon.${MAGPIE_PROJECT} "$@" > "$MAGPIE_LOG_DIR"/"$MAGPIE_PROJECT".out 2>&1 < /dev/null &
        fi
        echo $! > $PID_FILE
    	chmod 755 $PID_FILE
#	sleep 1;
#	tail -f "$MAGPIE_LOG_DIR"/${MAGPIE_PROJECT}.log
}

function stop_server() {
	if ! running; then
		echo "${MAGPIE_PROJECT} is not running."
		#exit 1
	fi
	count=0
	pid=$(cat $PID_FILE)
	while running;
	do
	  let count=$count+1
	  echo "Stopping $count times"
	  if [ $count -gt 5 ]; then
	      echo "kill -9 $pid"
	      kill -9 $pid
	  else
	      kill $pid
	  fi
	  sleep 3;
	done	
	echo "Stop ${MAGPIE_PROJECT} successfully." 
	rm $PID_FILE
}

function status(){
        if running;then
		echo "${MAGPIE_PROJECT} is running."
        else
                echo "${MAGPIE_PROJECT} is not running."
        fi
        exit 0
}

function help() {
    echo "Usage: magpie {start|stop}" >&2
    echo "       start:             start {nimbus|supervisor}"
    echo "       stop:              stop {nimbus|supervisor}"
}

command=$1
shift 1
case $command in
    status)
        status $@;
        ;;        
    start)
        start_server $@;
        ;;    
    stop)
        stop_server $@;
        ;;
    restart)
        stop_server $@;
        start_server $@;
        ;;
    *)
        help;
        exit 1;
        ;;
esac
